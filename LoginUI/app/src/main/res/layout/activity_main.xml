<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff">

            <ImageView
                android:id="@+id/imglogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/logo2" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#1188e9">

            <LinearLayout
                android:id="@+id/userLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:orientation="vertical"
                android:layout_marginTop="60dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/icon1"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="bottom"
                        android:layout_centerVertical="true"
                        android:background="@drawable/user5"/>

                    <EditText
                        android:id="@+id/edtUser"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:imeOptions="actionNext"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/icon"
                        android:backgroundTint="@android:color/background_light"
                        android:drawablePadding="10dp"
                        android:background="@android:color/transparent"
                        android:hint="Enter anything you want"
                        android:singleLine="true"
                        android:textColor="#ffffff"
                        android:textColorHint="#de8eea"/>

                    <ImageButton
                        android:id="@+id/btnDeleteUser"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="bottom"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/delete3"/>
                </LinearLayout>
                <View
                    android:layout_below="@+id/edtUser"
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:background="#ffffff"
                    android:layout_height="1dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/passLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userLayout"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="57dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/icon2"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="bottom"
                        android:layout_centerVertical="true"
                        android:background="@drawable/password3" />
                    <EditText
                        android:id="@+id/edtPassword"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/icon"
                        android:backgroundTint="@android:color/background_light"
                        android:drawablePadding="10dp"
                        android:background="@android:color/transparent"
                        android:hint="Enter your password"
                        android:singleLine="true"
                        android:textColor="#ffffff"
                        android:textColorHint="#de8eea"/>
                    <ImageButton
                        android:id="@+id/btnDeletePass"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="bottom"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/delete3"/>



                </LinearLayout>
                <View
                    android:layout_below="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff"
                    android:layout_height="1dp"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/passLayout"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="23dp"
                android:background="@drawable/custom_button"
                android:text="Đăng nhập"
                android:textColor="#ffffff" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>

